#calculator program demonstrating exception handling

def simple_calculator():
    try:
        # inputs
        num1 = float(input("Enter the first number: "))  # May raise ValueError
        operator = input("Enter an operator (+, -, *, /): ")
        num2 = float(input("Enter the second number: "))  # May raise ValueError

        if operator == "+":
            result = num1 + num2
        elif operator == "-":
            result = num1 - num2
        elif operator == "*":
            result = num1 * num2
        elif operator == "/":
            # division by zero
            if num2 == 0:
                raise ZeroDivisionError("Division by zero is not allowed.")
            result = num1 / num2
        else:
            # Raise an exception if the operator is invalid
            raise ValueError(f"Invalid operator '{operator}'. Only +, -, *, / are allowed.")
        
        print(f"The result of {num1} {operator} {num2} is: {result}")

    # Handle specific exceptions
    except ValueError as ve:
        print(f"ValueError: {ve}")  # Handles invalid number or operator inputs
    except ZeroDivisionError as zde:
        print(f"ZeroDivisionError: {zde}")

    else:
        print("Calculation completed successfully!")

    finally:
        print("Thank you for using the calculator!")

# Call the function to test it
simple_calculator()